{{!< layouts/main}}
<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <form action="/schedule" method="get">
                    <div class="mb-3">
                        <label for="dentistId" class="form-label">Select Dentist:</label>
                        <select class="form-select" id="dentistId" name="dentistId">
                            <option value="">All Dentists</option>
                            {{#each dentists}}
                            <option value="{{this.DentistNo}}">{{this.Name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Filter</button>
                </form>
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">View Appointments</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Appointment ID</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Treatment</th>
                                    <th>Attended</th>
                                    <th>Patient</th>
                                    <th>Dentist</th>
                                    <!-- Add other columns as needed -->
                                </tr>
                            </thead>
                            <tbody>
                                {{#each appointments}}
                                <tr>
                                    <td>{{this.AppointmentNo}}</td>
                                    <td>{{this.Date}}</td>
                                    <td>{{this.Time}}</td>
                                    <td>{{this.TreatmentNo}}</td>
                                    <td>{{#if this.Attended}}Yes{{else}}No{{/if}}</td>
                                    <td>{{this.PatientNo}}</td>
                                    <td>{{this.DentistNo}}</td>
                                    <!-- Add other columns as needed -->
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
