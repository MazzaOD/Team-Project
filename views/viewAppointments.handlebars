{{!< layouts/main}}

<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">View Appointments</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Appointment ID</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Treatment</th>
                                    <th>Attended</th>
                                    <th>Patient</th>
                                    <th>Dentist</th>
                                    <!-- Add other columns as needed -->
                                </tr>
                            </thead>
                            <tbody>
                                {{#each appointments}}
                                <tr>
                                    <td>{{AppointmentNo}}</td>
                                    <td>{{Date}}</td>
                                    <td>{{Time}}</td>
                                    <td>{{TreatmentNo}}</td>
                                    <td>{{Attended}}</td>
                                    <td>{{PatientNo}}</td>
                                    <td>{{DentistNo}}</td>
                                    <!-- Add other columns as needed -->
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
