{{!< layouts/main}} <section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Edit Appointment</h2>
                        <form action="/edit-appointment/{{appointment.AppointmentNo}}" method="POST">
                            <div class="mb-3">
                                <label for="date" class="form-label">Date</label>
                                <input type="date" class="form-control" id="date" name="date"
                                    value="{{appointment.Date}}" required>
                            </div>
                            <div class="mb-3">
                                <label for="time" class="form-label">Time</label>
                                <input type="time" class="form-control" id="time" name="time"
                                    value="{{appointment.Time}}" required>
                            </div>
                            <div class="mb-3">
                                <label for="treatmentName" class="form-label">Treatment Name</label>
                                <input type="text" class="form-control" id="treatmentName" name="treatmentName"
                                    value="{{appointment.treatment_name}}" required>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="attended" name="attended" {{#if
                                    appointment.Attended}}checked{{/if}}>
                                <label class="form-check-label" for="attended">Attended</label>
                            </div>
                            <div class="mb-3">
                                <label for="patientNo" class="form-label">Patient Number</label>
                                <input type="text" class="form-control" id="patientNo" name="patientNo"
                                    value="{{appointment.PatientNo}}" required>
                            </div>
                            <div class="mb-3">
                                <label for="dentistNo" class="form-label">Dentist Number</label>
                                <input type="text" class="form-control" id="dentistNo" name="dentistNo"
                                    value="{{appointment.DentistNo}}" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>