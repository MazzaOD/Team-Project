{{!< layouts/main}}

<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">View Dentists</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Dentist No</th>
                                    <th>Awarding Body</th>
                                    <th>Name</th>
                                    <th>Specialty</th>
                                    <!-- Add other columns as needed -->
                                </tr>
                            </thead>
                            <tbody>
                                {{#each dentists}}
                                <tr>
                                    <td>{{DentistNo}}</td>
                                    <td>{{AwardingBody}}</td>
                                    <td>{{Name}}</td>
                                    <td>{{Speciality}}</td>
                                    <!-- Add other columns as needed -->
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
