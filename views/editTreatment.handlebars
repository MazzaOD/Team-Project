{{!< layouts/main}}

<section class="intro">
    <div class="bg-image h-100"
        style="background-image: url(https://mdbootstrap.com/img/Photos/new-templates/glassmorphism-article/img7.jpg);">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card mask-custom">
                            <div class="card-body">
                                <h2 class="card-title text-center mb-4">Edit Treatment</h2>
                                <form action="/edit-treatment/{{treatment.TreatmentNo}}" method="POST">
                                    <div class="mb-3">
                                        <label for="Name" class="form-label">Name:</label>
                                        <input type="text" class="form-control" id="Name" name="Name" value="{{treatment.Name}}" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Description" class="form-label">Description:</label>
                                        <textarea class="form-control" id="Description" name="Description" required>{{treatment.Description}}</textarea>
                                    </div>
                                    <!-- Add this for editing cost -->
                                    <div class="mb-3">
                                        <label for="Cost" class="form-label">Cost:</label>
                                        <input type="number" class="form-control" id="Cost" name="Cost" value="{{treatment.Cost}}" step="0.01" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
