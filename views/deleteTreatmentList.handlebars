{{!< layouts/main}}

<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Delete Treatments</h2>
                        <form action="/delete-treatment" method="POST">
                            <ul class="list-group">
                                {{#each treatments}}
                                <li class="list-group-item">
                                    <label>
                                        <input type="checkbox" name="treatmentIds[]" value="{{TreatmentNo}}">
                                        {{Name}}
                                    </label>
                                </li>
                                {{/each}}
                            </ul>
                            <button type="submit" class="btn btn-danger">Delete Selected Treatments</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
