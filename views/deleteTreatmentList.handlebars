{{!< layouts/main}}

<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Choose Treatment to Delete</h2>
                        <form id="deleteTreatmentForm" method="POST">
                            <div class="mb-3">
                                <label for="treatmentId" class="form-label">Select Treatment:</label>
                                <select class="form-select" id="treatmentId" name="treatmentId" required>
                                    {{#each treatments}}
                                    <option value="{{TreatmentNo}}">{{Name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <button type="button" class="btn btn-danger" onclick="deleteTreatment()">Delete Treatment</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function deleteTreatment() {
        const selectedTreatmentId = document.getElementById('treatmentId').value;
        if (confirm('Are you sure you want to delete this treatment?')) {
            window.location.href = `/delete-treatment/${selectedTreatmentId}`;
        }
    }
</script>
