{{!< layouts/main}}

<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">View Treatments</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Treatment No</th>
                                    <th>Description</th>
                                    <th>Cost</th>
                                    <!-- Add other columns as needed -->
                                </tr>
                            </thead>
                            <tbody>
                                {{#each treatments}}
                                    <tr>
                                        <td>{{TreatmentNo}}</td>
                                        <td>{{Description}}</td>
                                        <td>{{Cost}}</td>
                                        <!-- Add other columns as needed -->
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
