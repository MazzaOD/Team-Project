{{!< layouts/main}}

<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Delete Appointments</h2>
                        <ul>
                            {{#each appointments}}
                                <li>
                                    <!-- Ensure that the information displayed matches your database schema -->
                                    <p>{{this.AppointmentNo}} - {{this.Date}} {{this.Time}} - Patient ID: {{this.PatientNo}} - Dentist ID: {{this.DentistNo}}</p>
                                    <!-- Modify the action URL to use the correct variable from your appointments -->
                                    <form action="/delete-appointment/{{this.AppointmentNo}}" method="POST">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
