{{!< layouts/main}}

<section class="intro">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Choose Patient to Delete</h2>
                        <form id="deletePatientForm" method="POST">
                            <div class="mb-3">
                                <label for="patientId" class="form-label">Select Patient:</label>
                                <select class="form-select" id="patientId" name="patientId" required>
                                    {{#each patients}}
                                    <option value="{{PatientNo}}">{{Name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <button type="button" class="btn btn-danger" onclick="deletePatient()">Delete Patient</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function deletePatient() {
        const selectedPatientId = document.getElementById('patientId').value;
        if (confirm('Are you sure you want to delete this patient?')) {
            window.location.href = `/delete-patient/${selectedPatientId}`;
        }
    }
</script>
